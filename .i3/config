# Hotkeys
bindsym --release Print                   exec --no-startup-id scrot ~/Pictures/Screenshots/'Screenshot-%Y-%m-%d-%T.png' -e 'notify-send "scrot" "$n" && xclip -selection c -t image/png $f'
bindsym --release $mod+Sys_Req            exec --no-startup-id scrot -u ~/Pictures/Screenshots/'Screenshot-%Y-%m-%d-%T.png' -e 'notify-send "scrot" "$n" && xclip -selection c -t image/png $f'
bindsym --release $start+Shift+s          exec --no-startup-id scrot -s ~/Pictures/Snippets/'Snippet-%Y-%m-%d-%T.png' -e 'notify-send "scrot" "$n" && xclip -selection c -t image/png -i $f'

# Media keys
bindsym XF86AudioRaiseVolume 	exec amixer -q set Master 3%+ unmute
bindsym XF86AudioLowerVolume 	exec amixer -q set Master 1%- unmute
bindsym XF86AudioMute 			exec amixer -q set Master toggle
bindsym XF86MonBrightnessDown 	exec xbacklight -dec 5 
bindsym XF86MonBrightnessUp 	exec xbacklight -inc 5

bindsym XF86AudioStop			exec cmus-remote --stop
bindsym XF86AudioPause			exec cmus-remote --pause
bindsym XF86AudioNext			exec cmus-remote --next
bindsym XF86AudioPrev			exec cmus-remote --prev

